# Example environment file for QUIZWIZ (rename to .env for local development)
SESSION_SECRET=change_me_to_a_long_secret
PORT=3000
# Set your MongoDB Atlas connection string here (keep it secret!)
# Example: mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/quizwiz?retryWrites=true&w=majority
MONGODB_URI=
# SQLite fallback (local file)
DATABASE_URL=./data/quizwiz.db
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM=no-reply@quizwiz.local

# Advanced/debugging (use only temporarily):
# If set to 'true', the MongoDB driver will allow invalid TLS certificates. Only use to diagnose TLS handshake problems.
MONGO_TLS_INSECURE=false
# Server selection timeout in ms
MONGO_SERVER_SELECTION_TIMEOUT_MS=10000
