<% layout('layout') -%>
<div class="row">
  <div class="col-12 col-lg-8 mx-auto">
    <div class="card">
      <div class="card-body">
        <h1 class="h3 mb-3">Send Feedback</h1>
        <p class="text-muted">This is a placeholder form. Wire it to any backend you like.</p>
        <form>
          <div class="mb-3">
            <label class="form-label">Your Email</label>
            <input type="email" class="form-control" placeholder="you@example.com" />
          </div>
          <div class="mb-3">
            <label class="form-label">Message</label>
            <textarea class="form-control" rows="5" placeholder="Your feedback..."></textarea>
          </div>
          <button class="btn btn-primary" type="button" onclick="alert('Thanks for the feedback!')">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>





